// Copy to Firebase Console > Firestore > Rules (or firestore.rules if using CLI)
// Allow read for properties (public), write for authenticated admin only.
// Allow read/write leads for authenticated admin only; allow create for anonymous (lead form).

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /properties/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /leads/{id} {
      allow read, write: if request.auth != null;
      allow create: if true;
    }
  }
}
